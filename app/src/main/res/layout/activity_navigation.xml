<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".ui.activity.NavigationActivity">

    <com.avenjr.me.me.ui.adapters.NavigationViewPager
        android:id="@+id/navigation_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">
    </com.avenjr.me.me.ui.adapters.NavigationViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@id/bottom_navigation"
        android:background="@color/appBackgroundDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/navigation_home_layout"
                android:layout_width="@dimen/header_height"
                android:layout_height="match_parent"
                android:background="@drawable/navigation_circle"
                android:padding="2dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/header_height"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/navigation_friends_layout"
                android:layout_width="@dimen/header_height"
                android:layout_height="match_parent"
                android:background="@drawable/navigation_circle"
                android:padding="2dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/header_height"
            android:layout_marginBottom="5dp"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/navigation_profile_layout"
                android:layout_width="@dimen/header_height"
                android:layout_height="match_parent"
                android:background="@drawable/navigation_circle"
                android:padding="2dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"></RelativeLayout>

</RelativeLayout>