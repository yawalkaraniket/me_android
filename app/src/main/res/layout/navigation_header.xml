<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/appBackground"
    android:elevation="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/nv_back_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="18dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_navigate_back_24dp" />
    </androidx.cardview.widget.CardView>

        <com.avenjr.me.me.ui.views.CustomTextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/nv_next_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="18dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_navigate_next_24dp" />
    </androidx.cardview.widget.CardView>

    <com.avenjr.me.me.ui.views.CustomTextView
        android:id="@+id/skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/skip"
        android:textAllCaps="true"
        android:layout_marginRight="20dp"
        android:textSize="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/appBackgroundDark"
        android:visibility="gone" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/appBackgroundDark"
        android:layout_alignParentBottom="true">
    </View>

</RelativeLayout>