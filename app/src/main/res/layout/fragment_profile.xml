<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/profile_background"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@color/appBackgroundDark" />

                <LinearLayout
                    android:id="@+id/profile_description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/my_friends_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:text="Friends"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/half_of_the_header_width" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:layout_marginBottom="-10dp"
                        android:background="@drawable/edit_text_unselected" />

                    <ImageView
                        android:id="@+id/edit_name_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_action_edit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:gravity="bottom"
                        android:padding="5dp"
                        android:text="Other"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/half_of_the_header_width" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"></androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/profile_image_layout"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="2dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/black"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="7dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:max="500"
                    android:padding="-2dp"
                    android:progress="100"
                    android:progressDrawable="@drawable/circular" />

            </RelativeLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <com.avenjr.me.me.ui.views.CustomTextView
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/curve_layout"
        android:padding="10dp"
        android:text="@string/share"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="10sp" />


</RelativeLayout>